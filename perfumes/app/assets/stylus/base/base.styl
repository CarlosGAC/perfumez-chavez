// about new and forms
.new-container
  display: flex;
  //align-items: center;
  flex-direction: column;

.form-container
  display: flex;
  flex-flow: column wrap;
  justify-content: space-between;

.form-container ul
  &:last-child
    height: 45px;

.li-submit
  height: 37px;

.li-submit input[type="submit"]
  font-weight: 600;

// orders
.pedidos-container
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;

  margin: 5px 0;
  width: 100%;

.pedidos
  display: flex;
  flex-direction: column;

.pedidos ul
  display: flex;
  flex-direction: row;
  justify-content: flex-start;

  padding-left: 0;

.pedidos li
  margin-right: 10px;

// Clients & Cuentas
.clientes-container, .cuentas-container
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;

  margin: 5px 0;
  width: 100%;


.clientes-container ul, .cuentas-container ul
  display: flex;
  flex-direction: row;
  justify-content: flex-start;

  padding-left: 0;

.clientes-container li, .cuentas-container li
  font-weight: 400;
  margin-right: 5px;
  width: 150px;

.table-ul-1 li
  font-weight: 600;

.table-ul-2 ul
  height: 50px;










