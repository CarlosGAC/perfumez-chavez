<p id="notice"><%= notice %></p>

<h1>Perfumes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Buy price</th>
      <th>Retail price</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perfumes.each do |perfume| %>
      <tr>
        <td><%= perfume.name %></td>
        <td><%= perfume.buy_price %></td>
        <td><%= perfume.retail_price %></td>
        <td><%= perfume.stock %></td>
        <td><%= link_to 'Show', perfume %></td>
        <td><%= link_to 'Edit', edit_perfume_path(perfume) %></td>
        <td><%= link_to 'Destroy', perfume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Perfume', new_perfume_path %>
